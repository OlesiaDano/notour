extends ../layouts/default

block intro
	.container
		
block content
		.container
			.header
				include ../views/components/home-header
			.content-wrapper
				.user-content
					.user-wall
						h1.contact-title Contact Us
						if enquirySubmitted
							h3 Thanks for getting in touch.
						else
							.col-sm-8.col-md-6
								form(method='post')
									input(type='hidden', name='action', value='contact')
									.form-group(class=validationErrors.name ? 'has-error' : null)
										label.contact-label Name
										input.contact-input(type='text', name='name.full', value=formData['name.full']).form-control
									.form-group(class=validationErrors.email ? 'has-error' : null)
										label.contact-label Email
										input.contact-input(type='email', name='email', value=formData.email).form-control
									.form-group
										label.contact-label Phone
										input.contact-input(type='text', name='phone', value=formData.phone, placeholder='(optional)').form-control
									.form-group(class=validationErrors.enquiryType ? 'has-error' : null)
										label.contact-label.long What are you contacting us about?
										select.select-menu(name='enquiryType').form-control
											option(value='') (select one)
											each type in enquiryTypes
												option(value=type.value, selected=formData.enquiryType == type.value)= type.label
									.form-group(class=validationErrors.message ? 'has-error' : null)
										label.contact-label.long Message
										textarea.contact-message(name='message', placeholder='Leave us a message...' rows=4).form-control= formData.message
									.form-actions
										button(type='submit').btn.btn-primary Send
							.contact-list Find list of our specialists contacts below:
