.blog-navigation
    .navigation-block
        form.search(action="user.js" method="POST" name="search")
            input.search-area(type='search', name='search', placeholder='Search name here', value='')
            .submit-button
                input.search-btn(type="submit" name="submit" value="")
    .navigation-block
        h4.navigation-title Menu
        include ../components/navbar
    .navigation-block
        h4.navigation-title Recent Post
