    if typeof data !== 'undefined' && typeof data.categories !== 'undefined' && data.categories.length
        .navigation-block
            h4.navigation-title Categories
            ul.categories
                each cat in data.categories
                    li.category
                        a.category-link(href='/blog/' + cat.key)=cat.name
